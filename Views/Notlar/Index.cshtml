@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLNOTLAR>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>NOT ID</th>
        <th>DERS ID</th>
        <th>OGRENCI ID</th>
        <th>SINAV 1</th>
        <th>SINAV 2</th>
        <th>SINAV 3</th>
        <th>PROJE</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <th>GÜNCELLE</th>
    </tr>

    <tbody>

        @foreach(var notlar in Model)
        {
            <tr>
                <td>@notlar.NOTID</td>
                <td>@notlar.DERSID</td>
                <td>@notlar.OGRID</td>
                <td>@notlar.SINAV1</td>
                <td>@notlar.SINAV2</td>
                <td>@notlar.SINAV3</td>
                <td>@notlar.PROJE</td>
                <td>@notlar.ORTALAMA</td>
                <td>@notlar.DURUM</td>
                <td><a href="/Notlar/NotGetir/@notlar.NOTID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    </tbody>

</table>

<a href="/Notlar/YeniNot" class="btn btn-primary">Yeni Not Girişi</a>