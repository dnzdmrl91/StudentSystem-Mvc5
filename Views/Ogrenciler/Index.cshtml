@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLOGRENCI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ÖĞRENCİ ADI</th>
        <th>ÖĞRENCİ SOYADI</th>
        <th>ÖĞRENCİ FOTOĞRAFI</th>
        <th>ÖĞRENCİ CİNSİYETİ</th>
        <th>ÖĞRENCİ KULUP</th>
        <th>İŞLEMLER</th>
    </tr>



    <tbody>

        @foreach(var ogrenciler in Model)
        {
            <tr>
                <td>@ogrenciler.OGRENCIID</td>
                <td>@ogrenciler.OGRAD</td>
                <td>@ogrenciler.OGRSOYAD</td>
                <td>@ogrenciler.OGRFOTO</td>
                <td>@ogrenciler.OGRCINSIYET</td>
                <td>@ogrenciler.OGRKULUP</td>
                <td><a href="/Ogrenciler/Sil/@ogrenciler.OGRENCIID" class="btn btn-danger">Sil</a>
                <a href="/Ogrenciler/OgrenciGetir/@ogrenciler.OGRENCIID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Ogrenciler/OgrenciEkle" class="btn btn-primary">Yeni Öğrenci Ekle</a>